<header>
	<h1>All Attendances</h1>


	<ul class = "actions">
		<li><%= link_to "Back to Dashboard", admin_root_path, class: "ibtn" %></li>
	</ul>
</header>


<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<th>Attendee</th>
			<th>Event</th>
			<th>Seats Left</th>
		</tr>
	</thead>


	<tbody>
		<% @attendances.each do |attendance| %>
			<tr>
				<td><%= attendance.attendee.full_name %></td>
				<td><%= link_to attendance.attended_event.title, event_path(attendance.attended_event)%></td>
				<td><%= "#" %></td>
			</tr>
		<% end %>
	</tbody>
</table>